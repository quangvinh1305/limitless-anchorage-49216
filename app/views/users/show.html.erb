<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-12"> <h1>Your Profile <h1></div>
  <aside class="col-md-2 col-md-offset-1">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.products.any? %>
      <h3>Products (<%= @products.count %>)</h3>
      <ol class="products">
        <%= render @products.includes(:category) %>
      </ol>
      <%= will_paginate @products %>
    <% end %>
  </div>
</div>