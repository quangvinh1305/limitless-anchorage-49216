<% provide(:title, "Home") %>

<% if logged_in? %>

  
<% else %>
  <div class="center jumbotron">
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-md-12">
        <div class="text-center">
          <h2><%= link_to "#{category.title.upcase}", category_path(category) %></h2>
            
        </div>
        <hr>
        <% category.products[0..6].each do |product| %>
          <div class="col-md-3">
            <div class="panel panel-success">
              <div class="panel-heading">
                       <%= link_to "#{truncate(strip_tags(product.title), length: 30, separator: ' ')}",product_path(product)%>
              </div>
              <div class="panel-body">
                <div class="text-center">
                  <%= link_to product_path(product) do %>

                    <%= image_tag(product.image_url)%>
                  <%end%>
                </div>
                <div class="text-center">
                  <p>
                    <strong><%= product.category.title%></strong>
                  </p>
                  <p>
                    Price: $<%= number_with_precision(product.price, precision: 2) %>
                  </p>
                </div>
                <div class="tex-center">
                  <% if product.stock <= 0 %>
                    <p>Out Of Stock</p>
                  <% else %>
                    <%= button_to "Add to cart", line_items_path(:product_id => product), class: "btn btn-success"%>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <%end%>
      </div>
    <% end %>
  </div>
  </div>

<% end %>