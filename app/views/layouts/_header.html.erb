<header class="navbar navbar-fixed-top navbar-inverse">
<div class="container">
   <%= link_to "Book Shop", root_path, id: "logo", class: "hidden-xs" %>
   <%= link_to "BS", root_path, id: "logo", class: "navbar-brand visible-xs" %>
  <div class="container" class="main-header">
    <%= form_tag("/search", method: "get", class:"navbar-form pull-left", role:"search") do %>

      <div class="input-group">
         <%= text_field_tag(:search, params[:search], placeholder: "Search", class: "form-control") %>
         <div class="input-group-btn">
              <%= button_tag "", type: 'submit', class: "btn btn-default" do%>
                <span class="glyphicon glyphicon-search"></span>
              <% end %>
         </div>
      </div>
   <% end %>
    <nav>
       <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Home",   root_path %></li>
          <li><%= link_to "Help",   help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "products", products_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <% if current_user.admin? %>
                <li><%= link_to "Order Management", admin_path %></li>
              <% else %>
                <li><%= link_to "Check Your Order", orders_path %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
        </ul> 
    </nav>
  </div>
</container>
</header>