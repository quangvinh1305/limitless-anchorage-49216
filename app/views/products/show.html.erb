<% if !@product.nil? %>
   <div class="row">
      <div class="col-md-12">
       <h1><%= @product.title %></h1>
     </div>
  </div>
  <div class="row">
   <div class="col-md-3 col-xs-offset-1">
    <%= image_tag @product.image_url :medium_icon %>
   </div>
   <div class="col-md-6">
    <div class="row">
     <div class="col-md-12">
      <p class="description">
        <%= @product.description.html_safe %>
      </p>
     </div>
    </div>
    <div class="row">
      <div class="col-md-1">
        <h2 class="product-price">$<%= @product.price %></h2>
      </div>
      <div class="col-md-2">
        <% if @product.stock > 0%>
          <%= button_to "Add to cart", line_items_path(:product_id => @product), class: "btn btn-success"%>
        <%else%>
          <span class="monospaced">Out Of Stock</span>
        <% end %>
      </div>
    </div><!-- end row -->


  </div>
<% end %>
