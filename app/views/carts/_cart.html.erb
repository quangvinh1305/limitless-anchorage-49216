<table>
  <%= render(cart.line_items) %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
    <td><%= button_to 'checkout', new_order_path, method: :get, class: "btn btn-success checkout_cart" %>
    </td>
    <td>
      <%= button_to 'empty', cart, method: :delete,
    data: { confirm: 'Are you sure?' } , class: "btn btn-danger empty_cart"%>
    </td>
  </tr>

</table>

